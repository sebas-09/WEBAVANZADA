@model List<CRUDCORE.Models.Empleado>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Registro de Empleados</h1>
</div>

<div class="card">
    <div class="card-header">
        <h5>Lista de Empleados</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <a class="btn btn-success btn-md" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="0">Crear Nuevo</a>
        </div>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Correo</th>
                        <th>Telefono</th>
                        <th>Cedula</th>
                        <th>Direccion</th>
                        <th>Cargo</th>
                        <th>Acciones</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.NombreCompleto</td>
                            <td>@item.Correo</td>
                            <td>@item.Telefono</td>
                            <td>@item.Cedula</td>
                            <td>@item.Direccion</td>
                            <td>@item.oCargo.Descripcion</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Empleado_Detalle" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">Editar</a>
                                <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">Eliminar</a>
                                <a class="btn btn-warning btn-sm" asp-action="Detalle" asp-controller="Home" asp-route-idEmpleado="@item.IdEmpleado">Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
